#!/bin/sh

case "$(echo "Shutdown\nRestart\nLock" | dmenu -b \
        -fn "JBMono Nerd Font:size=10" \
        -nb "#000000" \
        -nf "#ffffff" \
        -sb "#11111b" \
        -sf "#89b4fa" \
        -p "ï€‘" -l 5)" in
        Shutdown) exec loginctl poweroff;;
        Restart) exec loginctl reboot;;
        Lock) exec betterlockscreen -l;;
esac
