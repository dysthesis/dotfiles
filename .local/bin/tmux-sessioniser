#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
	selected=$1
else
	selected="$(cat <(echo ~/Documents/Projects/) <(fd --type directory . --max-depth 3 ~/Documents/University/) | while read -r p; do zoxide query -l -s "$p"; done | sort -rnk1 | fzf --no-sort | awk '{for (i=2; i<=NF; i++) printf $i (i<NF ? OFS : ORS)}')"
fi

if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
	tmux new-session -s "$selected_name" -c "$selected"
	exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
	tmux new-session -ds "$selected_name" -c "$selected"
fi

tmux switch-client -t "$selected_name"
